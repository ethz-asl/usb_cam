
<launch>
  <!-- launch-prefix="gdb -ex run -/-args" -->
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="1920" />
    <param name="image_height" value="1200" />
    <param name="pixel_format" value="bayer_grbg10" />
    <param name="av_device_format" value="GRAY16BE" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="exposure" value="500"/>
    <param name="autoexposure" value="false"/>
    <param name="framerate" value="false"/>

  <!-- Hardcore guess TBD actual calibration -->
    <param name="wb_blue_gain" value="0.0"/>
    <param name="wb_green_gain" value="0.0"/>
    <param name="wb_red_gain" value="0.0"/>
  </node>
</launch>
