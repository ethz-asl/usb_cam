<launch>
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" launch-prefix="gdb -ex run --args" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="1920" />
    <param name="image_height" value="1200" />
    <param name="pixel_format" value="mono16" />
    <param name="av_device_format" value="GRAY16BE" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
  </node>
</launch>
